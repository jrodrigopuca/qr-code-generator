{
  "name": "qr-generator",
  "version": "2.0.5",
  "description": "Zero-dependency QR code generator written in TypeScript. Implements ISO/IEC 18004 standard.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docs": "echo 'TypeDoc not configured yet - see Phase 6'",
    "prepublishOnly": "npm run build",
    "legacy:live": "live-server .",
    "legacy:build": "tsc && node dist/qr.legacy.js"
  },
  "keywords": [
    "qr",
    "qrcode",
    "qr-code",
    "generator",
    "typescript",
    "zero-dependency",
    "iso-18004"
  ],
  "author": "JuanPuca",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrodrigopuca/qr-generator"
  },
  "bugs": {
    "url": "https://github.com/jrodrigopuca/qr-generator/issues"
  },
  "homepage": "https://github.com/jrodrigopuca/qr-generator#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.5.5",
    "nodemon": "^3.1.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
